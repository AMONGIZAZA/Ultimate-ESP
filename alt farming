-- >> Container for Inputs <<
local container = Instance.new("Frame")
container.Size = UDim2.new(1, -24, 1, -55)
container.Position = UDim2.new(0, 12, 0, 50)
container.BackgroundTransparency = 1
container.Parent = mainFrame

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Parent = container
uiListLayout.SortOrder = Enum.SortOrder.LayoutOrder
uiListLayout.Padding = UDim.new(0, 12)

-- Helper to create inputs
local function createInput(placeholder, text, order)
	local box = Instance.new("TextBox")
	box.Size = UDim2.new(1, 0, 0, 38)
	box.BackgroundColor3 = DARK_THEME
	box.TextColor3 = TEXT_COLOR
	box.PlaceholderText = placeholder
	box.PlaceholderColor3 = Color3.fromRGB(150,150,150)
	box.Text = text
	box.Font = Enum.Font.Gotham
	box.TextSize = 14
	box.LayoutOrder = order
	
	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0, 8)
	c.Parent = box
	
	-- Subtle stroke for inputs
	local s = Instance.new("UIStroke")
	s.Color = Color3.fromRGB(80,80,80)
	s.Thickness = 1
	s.Parent = box
	
	box.Parent = container
	return box
end

