addHoverEffect(activeToggle)

local userBox = createInput("Target Username (Partial)", "", 2)
local timeBox = createInput("Loop Delay (Seconds)", "0", 3)
local radiusBox = createInput("Distance/Radius", "3", 4)

-- >> Direction Dropdown <<
