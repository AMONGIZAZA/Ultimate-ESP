local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")

local LocalPlayer = Players.LocalPlayer

-- // 1. UI Setup & Cleanup //
-- Remove old instance if it exists to prevent duplicates
for _, ui in pairs(CoreGui:GetChildren()) do
	if ui.Name == "TeleportToolUI_Fancy" then ui:Destroy() end
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportToolUI_Fancy"
screenGui.ResetOnSpawn = false

-- Security check for executors
if syn and syn.protect_gui then 
	syn.protect_gui(screenGui)
	screenGui.Parent = CoreGui
elseif gethui then
	screenGui.Parent = gethui()
else
	screenGui.Parent = CoreGui
end

-- // 2. Configuration & Themes //
local THEME_COLOR = Color3.fromRGB(50, 50, 50) -- Standard Gray
local DARK_THEME = Color3.fromRGB(30, 30, 30) -- Darker Gray for inputs
local TEXT_COLOR = Color3.fromRGB(255, 255, 255)
local CORNER_RADIUS = UDim.new(0, 10)

-- // 3. Animation Utilities //

-- Function to make UI "Bounce" when hovered
local function addHoverEffect(button)
	local originalSize = button.Size
	
	button.MouseEnter:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
			Size = UDim2.new(originalSize.X.Scale, originalSize.X.Offset + 4, originalSize.Y.Scale, originalSize.Y.Offset + 2)
		}):Play()
	end)

	button.MouseLeave:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
			Size = originalSize
		}):Play()
	end)
end

-- Function to make UI Draggable
local function makeDraggable(frame, dragHandle)
	local dragging, dragInput, dragStart, startPos
	
	dragHandle.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			dragging = true
			dragStart = input.Position
			startPos = frame.Position
			
			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragging = false
				end
			end)
		end
	end)
	
	dragHandle.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
			dragInput = input
		end
	end)
	
	UserInputService.InputChanged:Connect(function(input)
		if input == dragInput and dragging then
			local delta = input.Position - dragStart
			TweenService:Create(frame, TweenInfo.new(0.05, Enum.EasingStyle.Sine), {
				Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
			}):Play()
		end
	end)
end

-- // 4. Building the UI //

-- >> Toggle Button (Closed State) <<
local toggleBtn = Instance.new("TextButton")
toggleBtn.Name = "OpenButton"
toggleBtn.Size = UDim2.new(0, 100, 0, 40)
toggleBtn.Position = UDim2.new(0, 30, 0.85, 0)
toggleBtn.BackgroundColor3 = THEME_COLOR
toggleBtn.Text = "Open UI"
toggleBtn.TextColor3 = TEXT_COLOR
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 14
toggleBtn.Parent = screenGui
-- Make the button round
local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = CORNER_RADIUS
btnCorner.Parent = toggleBtn
-- Add interaction
makeDraggable(toggleBtn, toggleBtn) -- Make the toggle button itself draggable
addHoverEffect(toggleBtn)

-- >> Main Interface <<
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 260, 0, 440)
mainFrame.Position = UDim2.new(0.5, -130, 0.5, -220)
mainFrame.BackgroundColor3 = THEME_COLOR
mainFrame.Visible = false 
mainFrame.Parent = screenGui

local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = CORNER_RADIUS
mainCorner.Parent = mainFrame

-- >> Breathing Outline (Black <-> White) <<
local mainStroke = Instance.new("UIStroke")
mainStroke.Thickness = 2
mainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
mainStroke.Color = Color3.new(0, 0, 0) -- Start Black
mainStroke.Parent = mainFrame

-- Animate the stroke loop
local strokeTweenInfo = TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
local strokeTween = TweenService:Create(mainStroke, strokeTweenInfo, {Color = Color3.new(1, 1, 1)}) -- Tween to White
strokeTween:Play()

