directionFrame.ZIndex = 5 -- Ensure it sits above if needed

local currentDirBtn = Instance.new("TextButton")
currentDirBtn.Size = UDim2.new(1, 0, 0, 38)
currentDirBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 80)
currentDirBtn.Text = "Direction: Front"
currentDirBtn.TextColor3 = TEXT_COLOR
currentDirBtn.Font = Enum.Font.GothamBold
currentDirBtn.TextSize = 14
currentDirBtn.Parent = directionFrame
local cdCorner = Instance.new("UICorner"); cdCorner.Parent = currentDirBtn
addHoverEffect(currentDirBtn)

local dropContainer = Instance.new("Frame")
dropContainer.Size = UDim2.new(1, 0, 0, 100)
dropContainer.Position = UDim2.new(0, 0, 0, 45)
dropContainer.BackgroundTransparency = 1
dropContainer.Visible = false
dropContainer.Parent = directionFrame
dropContainer.ZIndex = 10

local dropLayout = Instance.new("UIListLayout")
dropLayout.Parent = dropContainer
dropLayout.Padding = UDim.new(0, 5)

local directions = {"Front", "Back", "Left", "Right"}
local selectedDirection = "Front"

for _, dir in ipairs(directions) do
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, 0, 0, 25)
	btn.BackgroundColor3 = DARK_THEME
	btn.Text = dir
	btn.TextColor3 = Color3.fromRGB(200, 200, 200)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 12
	btn.ZIndex = 11
	btn.Parent = dropContainer
	
	local c = Instance.new("UICorner"); c.Parent = btn
	
	btn.MouseButton1Click:Connect(function()
		selectedDirection = dir
		currentDirBtn.Text = "Direction: " .. dir
		dropContainer.Visible = false
	end)
end

currentDirBtn.MouseButton1Click:Connect(function()
	dropContainer.Visible = not dropContainer.Visible
end)

-- // 5. Logic & Teleportation //

-- Find player helper
local function getPlayerByPartialName(partialName)
	if not partialName or partialName == "" then return nil end
	partialName = partialName:lower()
	
	for _, player in ipairs(Players:GetPlayers()) do
		if player ~= LocalPlayer then
			if player.Name:lower():find(partialName) or player.DisplayName:lower():find(partialName) then
				return player
			end
		end
	end
	return nil
end

local isRunning = false

toggleBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
end)
closeBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = false
end)

activeToggle.MouseButton1Click:Connect(function()
	isRunning = not isRunning
	
	if isRunning then
		activeToggle.Text = "Status: Enabled"
		activeToggle.TextColor3 = Color3.fromRGB(100, 255, 100)
		activeToggle.BackgroundColor3 = Color3.fromRGB(40, 60, 40)
		
		task.spawn(function()
			while isRunning do
				local targetTxt = userBox.Text
				local timeTxt = tonumber(timeBox.Text) or 0
				local radiusTxt = tonumber(radiusBox.Text) or 3
				
				local targetPlayer = getPlayerByPartialName(targetTxt)
				
				if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
					
					local tRoot = targetPlayer.Character.HumanoidRootPart
					local lRoot = LocalPlayer.Character.HumanoidRootPart
					
					local offset = CFrame.new(0, 0, -radiusTxt) -- Default Front
					
					if selectedDirection == "Back" then
						offset = CFrame.new(0, 0, radiusTxt)
					elseif selectedDirection == "Left" then
						offset = CFrame.new(-radiusTxt, 0, 0)
					elseif selectedDirection == "Right" then
						offset = CFrame.new(radiusTxt, 0, 0)
					end
					
					lRoot.CFrame = tRoot.CFrame * offset
				end
				
				if timeTxt <= 0 then
					RunService.Heartbeat:Wait()
				else
					task.wait(timeTxt)
				end
			end
		end)
	else
		activeToggle.Text = "Status: Disabled"
		activeToggle.TextColor3 = Color3.fromRGB(255, 100, 100)
		activeToggle.BackgroundColor3 = DARK_THEME
	end
end)

